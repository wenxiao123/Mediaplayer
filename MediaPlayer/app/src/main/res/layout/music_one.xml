<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tim">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.75"
    android:orientation="vertical"
   >
    <ImageView
        android:id="@+id/backbtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/back3"
        android:text="返回"/>
    <TextView
        android:layout_gravity="center"
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ebedef"
        android:textSize="27sp"
        android:text=""/>
    <TextView
        android:layout_gravity="center"
        android:id="@+id/tvArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="#ebedef"
        android:text=""/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.example.wenxiao.mediaplayer.RoundImageView
        android:id="@+id/btn_r"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/timg33"/>
        <com.example.wenxiao.mediaplayer.lrc.LrcView
            android:layout_gravity="center"
            android:id="@+id/lrcView"
            android:layout_width="400dp"
            android:layout_height="400dp"
           />
    </FrameLayout>
</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lrc"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f1f4ee"
            android:textSize="19sp"
            android:text="显示歌词"/>
        <TextView
            android:id="@+id/sort"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#f1f4ee"
            android:textSize="19sp"
            android:text=""/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:orientation="vertical">
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1e82e6"
            android:textSize="12sp"
            android:text="0:00"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/idPrevious"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/last"
            android:text="上一首"/>
        <ImageView
            android:id="@+id/idPlay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/stop"
           />
        <ImageView
            android:id="@+id/idNext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/next"
           />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>