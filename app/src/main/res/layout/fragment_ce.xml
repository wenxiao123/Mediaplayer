<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bizhi2"
   >
  <View
      android:layout_width="match_parent"
      android:layout_height="30dp"/>
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:weightSum="1">
    <com.example.wenxiao.mediaplayer.RoundImageView
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:src="@drawable/title"
        android:layout_weight="0.13" />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <TextView
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="登陆/注册"
          android:textSize="16sp"
          android:textColor="#e984f4"/>

    </LinearLayout>
  </LinearLayout>
  <LinearLayout
      android:layout_marginTop="20dp"
      android:layout_marginBottom="20dp"
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="#889f9898"/>
  <LinearLayout
      android:clickable="true"
      android:background="@drawable/layout_selector"
      android:layout_marginLeft="15dp"
      android:layout_marginBottom="20dp"
      android:gravity="center_vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/left_menu_msg"/>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消息中心"
        android:textSize="18sp"
        android:textColor="#ffffff"/>
  </LinearLayout>
  <LinearLayout
      android:clickable="true"
      android:background="@drawable/layout_selector"
      android:layout_marginLeft="15dp"
      android:layout_marginBottom="20dp"
      android:gravity="center_vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/left_menu_look"/>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="皮肤中心"
        android:textSize="18sp"
        android:textColor="#ffffff"/>
  </LinearLayout>
  <LinearLayout
      android:clickable="true"
      android:background="@drawable/layout_selector"
      android:layout_marginLeft="15dp"
      android:layout_marginBottom="20dp"
      android:gravity="center_vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/left_menu_vip"/>
    <TextView
        android:id="@+id/t1"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="会员中心"
        android:textSize="18sp"
        android:textColor="#ffffff"/>
  </LinearLayout>
  <LinearLayout
      android:clickable="true"
      android:background="@drawable/layout_selector"
      android:layout_marginLeft="15dp"
      android:layout_marginBottom="20dp"
      android:gravity="center_vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/left_menu_musicmode"/>
    <TextView
        android:id="@+id/sound"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="控制音量"
        android:textSize="18sp"
        android:textColor="#ffffff"/>
  </LinearLayout>
  <LinearLayout
      android:clickable="true"
      android:background="@drawable/layout_selector"
      android:layout_marginLeft="15dp"
      android:layout_marginBottom="20dp"
      android:gravity="center_vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/left_menu_clock"/>
    <TextView
        android:id="@+id/close_btn"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="定时关闭"
        android:textSize="18sp"
        android:textColor="#ffffff"/>
  </LinearLayout>
  <LinearLayout
      android:layout_marginBottom="20dp"
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="#889f9898"/>
  <LinearLayout
      android:clickable="true"
      android:background="@drawable/layout_selector"
      android:layout_marginLeft="15dp"
      android:layout_marginBottom="20dp"
      android:gravity="center_vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/left_menu_wifi"/>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="仅WiFi联网"
        android:textSize="18sp"
        android:textColor="#ffffff"/>
  </LinearLayout>
  <LinearLayout
      android:clickable="true"
      android:background="@drawable/layout_selector"
      android:layout_marginLeft="15dp"
      android:layout_marginBottom="20dp"
      android:gravity="center_vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/left_menu_tablelrc"/>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="桌面歌词"
        android:textSize="18sp"
        android:textColor="#ffffff"/>
  </LinearLayout>
  <LinearLayout
      android:clickable="true"
      android:background="@drawable/layout_selector"
      android:layout_marginLeft="15dp"
      android:layout_marginBottom="20dp"
      android:gravity="center_vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/left_menu_lrc"/>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="锁屏歌词"
        android:textSize="18sp"
        android:textColor="#ffffff"/>
  </LinearLayout>
  <LinearLayout
      android:layout_marginBottom="20dp"
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:background="#889f9898"/>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <ImageView
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:src="@mipmap/left_menu_setting"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="设置"
          android:textSize="19sp"
          android:textColor="#ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <ImageView
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:src="@mipmap/left_menu_exit"/>
      <TextView
          android:id="@+id/exit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="退出"
          android:textSize="19sp"
          android:textColor="#ffffff"/>
    </LinearLayout>
  </RelativeLayout>
</LinearLayout>